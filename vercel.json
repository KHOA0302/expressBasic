{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/mysql2/**", "node_modules/sequelize/**"] 
      }
    }
  ],
  "functions": { 
    "api/index.js": {
      "runtime": "nodejs18.x" 
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}